generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  avatar String?
  email  String   @unique
  id     Int      @default(autoincrement()) @id
  name   String?
  Post   Post[]
  Recipe Recipe[]
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  published Boolean @default(false)
  title     String
  User      User?   @relation(fields: [authorId], references: [id])
}

model Recipe {
  authorId Int?
  id       Int    @default(autoincrement()) @id
  title    String
  User     User?  @relation(fields: [authorId], references: [id])
}