generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Result {
  id       Int     @default(autoincrement()) @id
  img      String
  recipeId Int?
  userId   Int?
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  user     User?   @relation(fields: [userId], references: [id])
}

model Recipe {
  createdAt   String?
  description String?
  difficulty  String?
  id          Int          @default(autoincrement()) @id
  imgOne      String?
  imgThree    String?
  imgTwo      String?
  title       String
  userId      Int?
  user        User?        @relation(fields: [userId], references: [id])
  results      Result[]
  steps        Step[]
  ingredients  Ingredient[]
}

model Resource {
  id     Int    @default(autoincrement()) @id
  src    String
  stepId Int?
  title  String
  step   Step?  @relation(fields: [stepId], references: [id])
}

model Step {
  description String?
  duration    Int?
  id          Int        @default(autoincrement()) @id
  recipeId    Int?
  src         String?
  title       String
  recipe      Recipe?    @relation(fields: [recipeId], references: [id])
  resources    Resource[]
  notify Int?
}

model IngredientCategory {
  id         Int          @default(autoincrement()) @id
  name       String
  ingredients Ingredient[]
}

model Ingredient {
  amount             String?
  categoryId         Int?
  id                 Int                 @default(autoincrement()) @id
  name               String
  recipeId           Int?
  category IngredientCategory? @relation(fields: [categoryId], references: [id])
  recipe             Recipe?             @relation(fields: [recipeId], references: [id])
}

model User {
  avatar    String?
  email     String   @unique
  firstName String
  id        Int      @default(autoincrement()) @id
  lastName  String
  userName  String?
  results    Result[]
  recipes    Recipe[]
}